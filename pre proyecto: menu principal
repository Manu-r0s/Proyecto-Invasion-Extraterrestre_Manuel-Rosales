            cout<<"- Crear Raza (1)"<<endl;
            cout<<"- Mostrar Razas (2)"<<endl;
            cout<<"- Modificar una Raza (3)"<<endl;
            cout<<"- Eliminar Raza (4)"<<endl;
            cout<<"- Regresar al Menu Principal (5)"<<endl;
            cin>>z;
