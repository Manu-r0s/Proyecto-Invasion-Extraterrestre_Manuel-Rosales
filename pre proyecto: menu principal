                  cout<<raza.nombre<<" / "<<raza.vida<<" / "<<raza.energia<<" / "<<raza.ambiente<<"\n";
                  cout<<"------------------------------------"<<"\n";
                }
                cout<<"Escoja unicamente de esta lista de razas"<<endl;
