                for (auto i = listaEstudiantes.begin(); i!=listaEstudiantes.end(); ++i){
                    if (i->nombre == estdelete){
                        listaEstudiantes.erase(i);
                        cout<<"------------------------------------"<<"\n";
                         cout<<"Estudiante eliminado exitosamente"<<endl;
                         cout<<"------------------------------------"<<"\n";
                        break;
