      if(x==1){
          
        y=0;
        while(y == 0){
            
            cout<<"- Crear Ambiente (1)"<<endl;
            cout<<"- Mostrar Ambientes (2)"<<endl;
            cout<<"- Modificar un Ambiente (3)"<<endl;
            cout<<"- Eliminar un Ambiente (4)"<<endl;
            cout<<"- Regresar al Menu Principal (5)"<<endl;
