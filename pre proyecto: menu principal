                for(const auto& est : listaEstudiantes){
                    cout<<est.nombre<<" / "<<est.raza<<endl;
                    cout<<"Mochila:"<<endl;
                    for(const auto& moch : mochila){
                        cout<<moch<<" / ";
                    }
                    cout<<endl;
                    cout<<"------------------------------------"<<"\n";
                }
                v=0;
            }
