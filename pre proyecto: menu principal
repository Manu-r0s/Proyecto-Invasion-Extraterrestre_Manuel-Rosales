                            cout<<obj.nombre<<", "<<obj.tipo<<", "<<obj.valor<<", "<<obj.tipo2<<", "<<obj.energia<<", "<<obj.contenedor<<"\n";
                        cout<<"------------------------------------"<<"\n";
