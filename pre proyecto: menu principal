                cin>>energiaO;
                nuevoAccesorio.energia=energiaO;
                cout<<"------------------------------------"<<"\n";
                cout<<"Ingrese el valor de proteccion que otorga el accesorio en caso de ser de tipo defensa (en caso de ser de otro tipo ingrese 0)"<<"\n";
