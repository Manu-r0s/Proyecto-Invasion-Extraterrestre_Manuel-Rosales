                        cin>>mochila4;
                        mochila.push_back(mochila4);
                        cout<<"------------------------------------"<<"\n";
                        
                        cout<<"Ingrese el nuevo quinto objeto a la mochila:"<<endl;
                        string mochila5;
                        cin>>mochila5;
                        mochila.push_back(mochila5);
